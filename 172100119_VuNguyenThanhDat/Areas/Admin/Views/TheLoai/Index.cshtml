@{
}
<div class="container" id="main">
	<table class="table text-center">
		<thead>
			<tr>
				<th>Tên thể loại</th>
				<th>Ngày tạo</th>
				<th>Ảnh mô tả</th>
				<th>Chức năng</th>
			</tr>
		</thead>
		@foreach (var item in @ViewBag.TheLoai)
		{
			<tbody>
				<tr>
					<td width="20%">@item.Name</td>
					<td width="20%">@String.Format("{0:dd/MM/yyyy}", item.DateCreated)</td>
					<td width="20%">
						<img src="~/@item.Image" width="150" >
					</td>
					<td width="40%">
						<a asp-asp-controller="TheLoai" asp-action="EditTheLoai" asp-route-id="@item.Id" class="btn btn-primary">Chỉnh sửa</a>
						<a asp-asp-controller="TheLoai" asp-action="InfoTheLoai" asp-route-id="@item.Id" class="btn btn-primary">Xem chi tiết</a>
						<a asp-asp-controller="TheLoai" asp-action="DeleteTheLoai" asp-route-id="@item.Id" class="btn btn-primary">Xóa</a>
					</td>
				</tr>
			</tbody>
		}
	</table>
<a asp-asp-controller="TheLoai" asp-action="CreateTheLoai" class="btn btn-primary">Thêm mới</a>
</div>
@section bootstrap{
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
}
@section cssHeavenICE_1{
	<link rel="stylesheet" href="~/css/HeavenICE_1.css" />
}