@{
}
<div class="container" id="main">
	<table class="table text-center">
		<thead>
			<tr>
				<th>Tên nhà cung cấp</th>
				<th>Địa chỉ</th>
				<th>Số điện thoại</th>
				<th>Chức năng</th>
			</tr>
		</thead>
		@foreach (var item in @ViewBag.NhaCungCap)
		{
			<tbody>
				<tr>
					<td width="20%">@item.Name</td>
					<td width="20%">@item.Address</td>
					<td width="20%">@item.PhoneNumber</td>
					<td width="40%">
						<a asp-asp-controller="TheLoai" asp-action="EditNhaCungCap" asp-route-id="@item.Id" class="btn btn-primary">Chỉnh sửa</a>
						<a asp-asp-controller="TheLoai" asp-action="DeleteNhaCungCap" asp-route-id="@item.Id" class="btn btn-primary">Xóa</a>
					</td>
				</tr>
			</tbody>
		}
	</table>
	<a asp-asp-controller="TheLoai" asp-action="CreateNhaCungCap" class="btn btn-primary">Thêm mới</a>
</div>
@section bootstrap{
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
}
@section cssHeavenICE_1{
	<link rel="stylesheet" href="~/css/HeavenICE_1.css" />
}