@{
}
@model TheLoai
<div class="container" id="main">
	<h3>Bạn có chắc chắn muốn xóa thể loại</h3>
	
	<form method="post" enctype="multipart/form-data">
		<div asp-validation-summary="All" class="text-danger"></div>

		<div class="form-group">
			<lable asp-for="Name">Tên thể loại </Lable>
			<input asp-for="Name" type="text" readonly class="form-control">
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="form-group">
			<lable asp-for="DateCreated">Ngày tạo </lable><br />
			<input asp-for="DateCreated" readonly type="date" class="form-control" >
			<span asp-validation-for="DateCreated" class="text-danger"></span>
		</div>
		<div class="form-group">
			<lable>Ảnh</lable><br />
			<img  id="ShowImage" src="~/@Model.Image" width="150" class="mt-4 mb-4" />
			<input asp-for="Image" type="hidden">
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-primary">Xóa</button>
			<a asp-asp-controller="TheLoai" asp-action="Index" class="btn btn-primary">Hủy</a>
		</div>
	</form>
</div>

@section scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}
@section bootstrap{
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
}
@section cssHeavenICE_1{
	<link rel="stylesheet" href="~/css/HeavenICE_1.css" />
}