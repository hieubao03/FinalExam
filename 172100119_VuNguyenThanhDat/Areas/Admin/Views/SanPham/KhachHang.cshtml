@model IEnumerable<ApplicationUser>
<div id="main" class="container" style="max-width:1200px">
	<table class="table text-center">
		<thead>
			<tr>
				<th>Tên khách hàng</th>
				<th>Địa chỉ</th>
				<th>Số điện thoại</th>
				<th>Chức năng</th>
			</tr>
		</thead>
		@foreach (var item in Model)
		{
			<tbody>
				<tr>
					<td width="15%">@item.Name</td>
					<td width="15%">@item.Address</td>
					<td width="15%">@item.PhoneNumber</td>
					<td width="25%">
						<a asp-action="UpdateUser" asp-route-id="@item.Id" class="btn btn-primary">Sửa</a>
						<a asp-action="DonHang" asp-route-id="@item.Id" class="btn btn-primary">Hàng đã mua</a>
					</td>
				</tr>
			</tbody>
		}
	</table>
</div>
@section bootstrap{
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
}
@section cssHeavenICE_1{
	<link rel="stylesheet" href="~/css/HeavenICE_1.css" />
}

