@model IEnumerable<HoaDon>
@{
	int i = 1;
}
<div id="main" class="container">
	<table class="table text-center">
		<thead>
			<tr>
				<th>STT</th>
				<th>Tên khách hàng</th>
				<th>SĐT</th>
				<th>Địa chỉ</th>
				<th>Trạng thái đơn hàng</th>
				<th>Tổng cộng</th>
				<th>Chức năng</th>
			</tr>
		</thead>	
		@foreach (var item in Model)
		{
			<tbody>
				<tr>
					<td width="5%">@(i++)</td>
					<td width="15%">@item.Name</td>
					<td width="15%">@item.PhoneNumber</td>
					<td width="10%">@item.Address</td>
					<td width="20%">@item.OrderStatus</td>
					<td width="15%">@String.Format("{0:0,0 vnđ}", item.Total)</td>
					<td width="20%">
						<a asp-action="ChiTietDonHang" asp-route-hoadonId="@item.Id" class="btn btn-primary">Chi tiết đơn hàng</a>
					</td>
				</tr>
			</tbody>
		}
	</table>
</div>
@section bootstrap{
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
}
@section cssHeavenICE_1{
	<link rel="stylesheet" href="~/css/HeavenICE_1.css" />
}

